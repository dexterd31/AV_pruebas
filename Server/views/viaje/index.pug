extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.IMAGEN}_ln.jpg`)
            .col-md-7
                h1 #{viaje.TITULO}
                p
                    i.fas.fa-calendar-alt
                    |   Fecha Ida: #{viaje.FECHA_IDA} - Fecha Vuelta: #{viaje.FECHA_REGRESO}
                p
                    i.fas.fa-dollar-sign
                    |   #{viaje.PRECIO}
                p
                    i.fas.fa-users
                    |   #{viaje.DISPONIBLES}Disponibles
                P= viaje.DESCRIPCION