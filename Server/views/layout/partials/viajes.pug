.row.proximos-viajes
            each viaje in viajes 
                .col-md-6.col-lg-4.mb-4
                    .card
                        img.img-fluid(src=`img/destinos_${viaje.IMAGEN}.jpg`, alt=`${viaje.IMAGEN}`)
                        .card-body
                            h2=viaje.TITULO
                            p
                                i.fas.fa-calendar-alt
                                |  #{viaje.FECHA_IDA} - #{viaje.FECHA_REGRESO}
                            p
                                i.fas.fa-dollar-sign
                                |  #{viaje.PRECIO}
                            P= viaje.DESCRIPCION.substr(0,100)
                            a(href=`viajes/${viaje.id}`, class="btn btn-success btn-block") Mas Informacion